{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    // Type Checking - Maximum strictness
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,

    // Module Resolution
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,

    // Emit
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    // JavaScript Support
    "allowJs": false,
    "checkJs": false,

    // Language and Environment
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable", "WebWorker"],
    "module": "ESNext",
    "jsx": "react-jsx",

    // Projects
    "incremental": true,
    "composite": true,
    "tsBuildInfoFile": ".tsbuildinfo",

    // Output
    "outDir": "dist",
    "rootDir": "src",

    // Interop Constraints
    "forceConsistentCasingInFileNames": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,

    // Skip Lib Check for faster builds
    "skipLibCheck": false,
    "skipDefaultLibCheck": false,

    // Completeness
    "noEmitOnError": true,

    // Advanced
    "preserveConstEnums": true,
    "preserveWatchOutput": true,
    "pretty": true,
    "stripInternal": true,
    "useDefineForClassFields": true,

    // Path Mapping
    "baseUrl": ".",
    "paths": {
      "@sim4d/types": ["packages/types/src"],
      "@sim4d/types/*": ["packages/types/src/*"],
      "@sim4d/engine-core": ["packages/engine-core/src"],
      "@sim4d/engine-core/*": ["packages/engine-core/src/*"],
      "@sim4d/engine-occt": ["packages/engine-occt/src"],
      "@sim4d/engine-occt/*": ["packages/engine-occt/src/*"],
      "@sim4d/nodes-core": ["packages/nodes-core/src"],
      "@sim4d/nodes-core/*": ["packages/nodes-core/src/*"],
      "@sim4d/viewport": ["packages/viewport/src"],
      "@sim4d/viewport/*": ["packages/viewport/src/*"],
      "@sim4d/constraint-solver": ["packages/constraint-solver/src"],
      "@sim4d/constraint-solver/*": ["packages/constraint-solver/src/*"],
      "@sim4d/collaboration": ["packages/collaboration/src"],
      "@sim4d/collaboration/*": ["packages/collaboration/src/*"],
      "@sim4d/schemas": ["packages/schemas/src"],
      "@sim4d/schemas/*": ["packages/schemas/src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    ".turbo",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/test/**",
    "**/tests/**",
    "**/__tests__/**",
    "**/vitest.config.ts",
    "**/vite.config.ts",
    "**/tsup.config.ts"
  ]
}
