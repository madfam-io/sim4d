{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "react", "react-hooks", "security", "no-secrets"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "prettier"
  ],
  "env": {
    "browser": true,
    "es2022": true,
    "node": true,
    "worker": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "@typescript-eslint/explicit-module-boundary-types": "off",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_|^variables$|^initHasher$|^NodeInstance$|^Constraint$|^GeometryElement$",
        "caughtErrorsIgnorePattern": "^_",
        "destructuredArrayIgnorePattern": "^_"
      }
    ],
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/ban-ts-comment": [
      "error",
      {
        "ts-nocheck": true,
        "ts-ignore": "allow-with-description",
        "ts-expect-error": "allow-with-description",
        "minimumDescriptionLength": 20
      }
    ],
    "no-console": "warn",
    "no-case-declarations": "off",
    "react-hooks/exhaustive-deps": "warn",
    "react/no-unescaped-entities": "warn",
    "no-useless-escape": "warn",
    "@typescript-eslint/no-unused-expressions": "off",
    "security/detect-object-injection": "off",
    "security/detect-non-literal-fs-filename": "warn",
    "security/detect-unsafe-regex": "error",
    "security/detect-buffer-noassert": "error",
    "security/detect-child-process": "warn",
    "security/detect-disable-mustache-escape": "error",
    "security/detect-eval-with-expression": "error",
    "security/detect-no-csrf-before-method-override": "error",
    "security/detect-non-literal-regexp": "warn",
    "security/detect-non-literal-require": "off",
    "security/detect-possible-timing-attacks": "warn",
    "security/detect-pseudoRandomBytes": "error",
    "no-secrets/no-secrets": "error",
    "complexity": ["error", 15],
    "max-lines": ["error", { "max": 500, "skipBlankLines": true, "skipComments": true }],
    "max-lines-per-function": [
      "error",
      { "max": 100, "skipBlankLines": true, "skipComments": true }
    ],
    "max-depth": ["error", 4],
    "max-nested-callbacks": ["error", 3]
  },
  "overrides": [
    {
      "files": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/tests/**/*",
        "**/test/**/*"
      ],
      "rules": {
        "security/detect-non-literal-fs-filename": "off",
        "no-secrets/no-secrets": "off"
      }
    },
    {
      "files": ["packages/cli/**/*"],
      "rules": {
        "security/detect-non-literal-fs-filename": "off",
        "no-console": "off"
      }
    },
    {
      "files": ["**/cloud-services/**/*", "**/collaboration/**/*"],
      "rules": {
        "no-secrets/no-secrets": "off"
      }
    },
    {
      "files": [
        "**/nodes/generated/**/*",
        "**/plugin-manager.ts",
        "**/authentication-service.ts",
        "**/diff-merge.ts",
        "**/collaboration-engine.ts"
      ],
      "rules": {
        "max-lines": "warn",
        "max-lines-per-function": "warn",
        "complexity": "warn"
      }
    }
  ],
  "ignorePatterns": ["dist", "build", "node_modules", "*.js", "*.mjs"]
}
