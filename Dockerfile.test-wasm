# Dockerfile.test-wasm
# Browser-based container for WASM integration tests
# Includes Playwright with Chromium for real browser testing

FROM mcr.microsoft.com/playwright:v1.40.0-jammy

# Install Node.js 20
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - && \
    apt-get install -y nodejs

# Enable pnpm
RUN corepack enable pnpm

WORKDIR /app

# ============================================
# Stage 1: Dependencies
# ============================================

# Copy package files for dependency installation
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY .npmrc ./

# Copy all package.json files to establish workspace structure
COPY apps/studio/package.json ./apps/studio/
COPY apps/marketing/package.json ./apps/marketing/
COPY packages/cli/package.json ./packages/cli/
COPY packages/cloud-api/package.json ./packages/cloud-api/
COPY packages/cloud-services/package.json ./packages/cloud-services/
COPY packages/collaboration/package.json ./packages/collaboration/
COPY packages/constraint-solver/package.json ./packages/constraint-solver/
COPY packages/engine-core/package.json ./packages/engine-core/
COPY packages/engine-occt/package.json ./packages/engine-occt/
COPY packages/examples/package.json ./packages/examples/
COPY packages/nodes-core/package.json ./packages/nodes-core/
COPY packages/schemas/package.json ./packages/schemas/
COPY packages/sdk/package.json ./packages/sdk/
COPY packages/types/package.json ./packages/types/
COPY packages/version-control/package.json ./packages/version-control/
COPY packages/viewport/package.json ./packages/viewport/

# Install dependencies with frozen lockfile
RUN pnpm install --frozen-lockfile --prefer-offline

# Install Playwright browsers (already in base image, but ensure latest)
RUN pnpm exec playwright install chromium --with-deps

# ============================================
# Stage 2: Test Runner with WASM Support
# ============================================

# Copy source code and configuration
COPY . .

# Copy test configuration
COPY vitest.config.ts vitest.config.js ./
COPY playwright.config.ts playwright.config.js ./
COPY tsconfig.json tsconfig.base.json ./
COPY tests/ ./tests/

# Copy WASM binaries (critical for WASM tests)
COPY dist/wasm/ ./dist/wasm/

# Set environment variables for browser testing
ENV NODE_ENV=test
ENV CI=true
ENV PLAYWRIGHT_BROWSERS_PATH=/ms-playwright
ENV DISPLAY=:99

# Enable SharedArrayBuffer support (required for WASM threads)
ENV COOP_COEP_ENABLED=true

# Create output directories
RUN mkdir -p test-results test-outputs coverage playwright-report

# Health check for browser readiness
HEALTHCHECK --interval=5s --timeout=3s --retries=3 \
  CMD pnpm exec playwright --version

# Default command: run WASM integration tests in browser
# This will use Playwright to run tests requiring WASM loading
CMD ["pnpm", "exec", "playwright", "test", "packages/engine-occt/src/", "--reporter=list"]
