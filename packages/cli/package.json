{
  "name": "@brepflow/cli",
  "version": "0.1.0",
  "description": "BrepFlow CLI for headless rendering",
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "brepflow": "./dist/index.mjs"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@brepflow/engine-core": "workspace:*",
    "@brepflow/engine-occt": "workspace:*",
    "@brepflow/nodes-core": "workspace:*",
    "@brepflow/types": "workspace:*",
    "@brepflow/schemas": "workspace:*",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "fs-extra": "^11.2.0",
    "ajv": "^8.12.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "tsup": "^8.0.0",
    "vitest": "^4.0.9"
  }
}
