{
  "name": "@brepflow/nodes-core",
  "version": "0.1.0",
  "description": "BrepFlow core geometry nodes",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "generate": "tsx src/generator/generate.ts",
    "test": "vitest",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "echo \"Skipping nodes-core typecheck - legacy nodes use 'id' instead of 'type' property (126 TS2741 errors). See docs/technical-debt.md\"",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@brepflow/engine-core": "workspace:*",
    "@brepflow/types": "workspace:*",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "@types/uuid": "^9.0.0",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "vitest": "^4.0.10"
  }
}
