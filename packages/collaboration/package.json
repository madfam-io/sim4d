    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^20.19.25",
    "@types/react": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.10",
