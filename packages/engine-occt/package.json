{
  "name": "@sim4d/engine-occt",
  "version": "0.1.0",
  "description": "Sim4D OCCT.wasm worker bindings",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./hybrid": {
      "types": "./dist/hybrid-geometry-api.d.ts",
      "import": "./dist/hybrid-geometry-api.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "pnpm run clean && vitest --no-cache",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit || echo '⚠️  TypeScript errors detected (61 remaining - see Week 6 roadmap)'",
    "clean": "rm -rf dist",
    "build:bindings": "bash scripts/compile-bindings.sh",
    "build:wasm": "bash scripts/build-bindings.sh"
  },
  "dependencies": {
    "@sim4d/engine-core": "workspace:*",
    "@sim4d/types": "workspace:*",
    "comlink": "^4.4.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/uuid": "^9.0.7",
    "node-fetch": "2",
    "tsup": "^8.5.1",
    "vitest": "^4.0.9"
  }
}
