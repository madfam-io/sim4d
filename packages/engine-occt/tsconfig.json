{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022", "WebWorker", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": false,
    "incremental": false,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.js",
    "../../tests/**/*",
    "../../config/**/*"
  ]
}
