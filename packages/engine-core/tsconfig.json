{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": false,
    "incremental": false,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false,
    "noImplicitAny": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.js",
    "**/*.tsx",
    "../../tests/**/*",
    "../../config/**/*",
    "src/collaboration/**/*",
    "src/scripting/**/*",
    "src/components/**/*",
    "src/constraints/**/*",
    "src/config/environment.ts",
    "src/config/wasm-config.ts",
    "src/kinematics-solver.ts",
    "src/performance-monitor.ts",
    "src/geometry-api-factory.ts"
  ]
}
