# BrepFlow E2E Test Environment Configuration

# Application Mode
NODE_ENV=test
BREPFLOW_MODE=test

# Collaboration Server Configuration (required for E2E tests)
VITE_COLLABORATION_WS_URL=http://localhost:8080
VITE_COLLABORATION_API_URL=http://localhost:8080
VITE_ENABLE_COLLABORATION=true

# API Configuration
VITE_API_BASE_URL=http://localhost:8080

# Geometry Engine Configuration
ENABLE_MOCK_GEOMETRY=true
REQUIRE_REAL_OCCT=false
OCCT_WASM_PATH=/assets/wasm
OCCT_INIT_TIMEOUT=60000
VALIDATE_GEOMETRY_OUTPUT=false

# Performance & Memory
MAX_WORKER_MEMORY_MB=2048
ENABLE_MEMORY_MONITORING=false
MESH_CACHE_SIZE_MB=512
WORKER_RESTART_THRESHOLD_MB=1800

# Security
ENABLE_CSP=false
REQUIRE_CORS_VALIDATION=false
ALLOWED_ORIGINS=*

# Logging & Monitoring
LOG_LEVEL=info
ENABLE_ERROR_REPORTING=false
SENTRY_DSN=
ENABLE_PERFORMANCE_MONITORING=false

# Feature Flags
ENABLE_EXPORT_VALIDATION=false
ENABLE_HEALTH_CHECKS=true
ENABLE_ADMIN_DASHBOARD=false
VITE_ENABLE_MONITORING=false

# Export Settings
MAX_EXPORT_SIZE_MB=100
SUPPORTED_FORMATS=step,iges,stl,obj,debug
REQUIRE_EXPORT_VALIDATION=false

# WASM Configuration
VITE_WASM_WORKERS=true
